generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Table {
  id    Int    @id @default(autoincrement())
  rows  Int
  cols  Int
  name  String
  cells Cell[]
}

model Cell {
  id      Int    @id @default(autoincrement())
  tableId Int
  row     Int
  col     Int
  value   String
  table   Table  @relation(fields: [tableId], references: [id])
}
